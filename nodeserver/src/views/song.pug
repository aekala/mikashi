doctype html
html 
  head
    title Lyrics.io
    link(
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    )
    link(
      rel="stylesheet"
      href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900"
    )
    link(
      rel="stylesheet"
      href="../css/template.css"
    )
    link(
      rel="stylesheet"
      href="../css/fonts.css"
    )
    style 
      include ../css/stylesheet.css
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  body(
    class="contentBlackBG"
  )
    #header(
      class="container-fluid"
    )  
      #menu(
        class="navbar-top"
      )
        .navBar
            .centerNav
                ul
                    li                    
                        a(
                            href="/"
                            title="Homepage"
                        ) Homepage
                    li
                        a(
                            href="/search"
                            title="Search"
                        ) Search
                    li
                        a(
                            href="/contact"
                            title="Contact Us"
                        ) Contact Us
            .spotifyProfile
                img(
                    src=spotifyProfileImage
                    class="image-circular"
                    id="userProfileImg"
                    width="250rem"
                    )
                span.spotify-username 
                    a(
                      data-toggle="modal"
                      data-target="#exampleModal"
                    ) #{spotifyUsername}
    .container-fluid
      .row
        .col(
          class="song-details-top-bar"
        )
      .row(
        class="song-details-bg"
      )
        .col-12
          .card(
            class="song-details-card"
          )
            .row(
              class="no-gutters"
            )
              .col-2                
              .col-3
                img(
                  src=albumArtUrl
                  id="albumArt"
                  width="250rem"
                )
              .col-7
                .card-body(
                  class="song-details-text"
                )
                  h5.card-title(
                    class="song-details-text-song"
                  ) #{songName}
                  p.card-text(
                    class="song-details-text-artist"
                  ) #{artist}
                  p.card-text(
                    class="song-details-text-album"
                  ) Album: #{albumName}   
                  a.btn(
                    class="btn-primary"
                    type="button"
                    href="/updateSong"
                  ) Update Song
      .row
        .col(
          class="song-details-bottom-bar"
        )
      .row(
        class="song-lyrics-div justify-content-center"
      )
        .col-4(
          class="song-lyrics-sidebar"
        )        
        .col-4(
          class="song-lyrics-content"
        )
          p.song-lyrics-header Lyrics  
          p.song-lyrics-text !{lyrics}   
        .col-4(
          class="song-lyrics-sidebar"
        )            
  .modal(
    class="fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  )
    .modal-dialog
      .modal-content
        .modal-header
          h4.modal-title(
            id="exampleModalLabel"
          ) Lyric.io
          button(
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          ) 
            span(
              aria-hidden="true"
            ) &times;
        .modal-body 
          p.modal-content-text Signed in as: <strong> #{spotifyUsername} </strong>
        .modal-footer
          button(
            type="button"
            class="btn btn-primary"
            data-dismiss="modal"
          ) Close


